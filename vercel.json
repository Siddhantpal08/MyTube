{
  "version": 2,
  "builds": [
    {
      "src": "Backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**"]
      }
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "Backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}